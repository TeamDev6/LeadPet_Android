<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.dev6.core.view.SquareFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/savedAdoptionCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/savedAdoptionUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedAdoptionTitle" />

        <TextView
            android:id="@+id/savedAdoptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/savedAdoptionIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedAdoptionUserId"
            android:contentDescription="TODO"></ImageView>


    </com.dev6.core.view.SquareFrameLayout>
</layout>