<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/donation_ShelterIv"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@color/black"
            android:src="@drawable/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />


        <TextView
            android:id="@+id/donation_ShelterNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="율리아펫 보호소"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toTopOf="@+id/donation_ShelterIv"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/donation_ShelterDetailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입양 20 | 기부 5 | 일상 17"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toEndOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.968" />

        <ImageView
            android:id="@+id/donation_feedIv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintVertical_bias="0.432" />

        <TextView
            android:id="@+id/recommentdonationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고양이 사료가 부족해요!"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/donation_feedIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/donation_feedIv"
            app:layout_constraintTop_toTopOf="@+id/donation_feedIv"
            app:layout_constraintVertical_bias="0.173" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 보호소에 유기묘가 많이 생겨서 고양이사료가\n부족한 산태라 도움 요청합니다."
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/donation_feedIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/donation_feedIv"
            app:layout_constraintTop_toBottomOf="@+id/recommentdonationTv"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/donation_typeTv"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="사료"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0.95"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterDetailTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/donation_ShelterNameTv" />

        <TextView
            android:textColor="@color/purple_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022.03.27일 까지"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.851" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>