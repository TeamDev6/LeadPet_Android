<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemDonationCl"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/donation_ShelterIv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/black"
            android:src="@drawable/home"
            android:layout_marginTop="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />


        <TextView
            android:id="@+id/donation_ShelterNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansneo_medium"
            android:text="율리아펫 보호소"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/Gray_02"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toTopOf="@+id/donation_ShelterIv"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/donation_ShelterDetailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입양 20 | 기부 5 | 일상 17"
            android:textColor="@color/Gray_06"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toEndOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/donation_feedIv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/donation_ShelterIv"
            app:layout_constraintTop_toBottomOf="@+id/donation_ShelterIv"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/recommentdonationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansansneobold"
            android:text="고양이 사료가 부족해요!"
            android:textColor="@color/Gray_01"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/donation_feedIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toEndOf="@+id/donation_feedIv"
            app:layout_constraintTop_toTopOf="@+id/donation_feedIv"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="최근 보호소에 유기묘가 많이 생겨서 고양이사료가\n부족한 산태라 도움 요청합니다."
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Gray_01"
            android:fontFamily="@font/hansneo_medium"
            app:layout_constraintBottom_toBottomOf="@+id/donation_feedIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/donation_feedIv"
            app:layout_constraintTop_toBottomOf="@+id/recommentdonationTv"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/donation_typeTv"
            android:textColor="@color/Main"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="사료"
            android:fontFamily="@font/hansansneobold"
            android:background="@drawable/round_8dp"
            android:backgroundTint="#FCEFE7"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="@+id/donation_ShelterDetailTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/donation_ShelterNameTv" />

        <TextView
            android:id="@+id/donationEndTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansneo_medium"
            android:text="2022.03.27일 까지"
            android:textColor="#5274EE"
            android:textSize="12dp"
            android:layout_marginVertical="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>