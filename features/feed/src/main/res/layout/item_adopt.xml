<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemAdoptCl"
    android:layout_width="match_parent"
    android:layout_height="166dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/adoptUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansneo_medium"
            android:text="율리아펫 보호소"
            android:textColor="@color/Gray_02"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/announceTv"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:background="@drawable/round_8dp"
            android:backgroundTint="#FCEFE7"
            android:fontFamily="@font/hansansneobold"
            android:gravity="center"
            android:text="공고중"
            android:textSize="11dp"
            android:textColor="@color/Main"
            app:layout_constraintBottom_toBottomOf="@+id/adoptUserId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adoptUserId"
            app:layout_constraintWidth_percent="0.15" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/adoptContentIv"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6" />

    <TextView
        android:id="@+id/adoptTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/hansneo_medium"
        android:text="새로운 가족을 찾고 있어요"
        android:textColor="@color/Gray_01"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintVertical_bias="0" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/adoptTitleTv"
        app:layout_constraintTop_toBottomOf="@+id/adoptTitleTv"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_regular"
                android:text="품종  "
                android:textSize="12dp"
                android:textColor="@color/Gray_04" />

            <TextView
                android:id="@+id/adoptBreedTv"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_medium"
                android:layout_marginLeft="@dimen/shelter_adopt_margin_left"
                android:text="고양이 + 스코티쉬폴드 아메숏 + 암컷"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_regular"
                android:text="나이  "
                android:textSize="12dp"
                android:textColor="@color/Gray_04" />

            <TextView
                android:id="@+id/adoptAgeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_medium"
                android:text="3개월"
                android:textSize="12dp"
                android:layout_marginLeft="@dimen/shelter_adopt_margin_left"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_regular"
                android:text="질병  "
                android:textSize="12dp"

                android:textColor="@color/Gray_04" />

            <TextView
                android:id="@+id/adoptDiseaseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hansneo_regular"
                android:text="없음"
                android:layout_marginLeft="@dimen/shelter_adopt_margin_left"
                android:textSize="12dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12dp"
                android:fontFamily="@font/hansneo_regular"
                android:textColor="@color/Gray_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공고  " />

            <TextView
                android:id="@+id/adoptDateTv"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.03.19 - 2022.04.02"
                android:layout_marginLeft="@dimen/shelter_adopt_margin_left"
                android:textColor="#3F51B5" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>