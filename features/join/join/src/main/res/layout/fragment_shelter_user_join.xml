<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/joinType_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/keyboard_backspace"
                app:layout_constraintBottom_toBottomOf="@+id/appBar"
                app:layout_constraintEnd_toEndOf="@+id/appBar"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55"></ImageView>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="프로필"
                android:textColor="@color/grey5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/profileButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBar">

                <ImageView
                    android:id="@+id/shelter_profileImageButton"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/userprofileimage"></ImageView>

                <TextView
                    android:id="@+id/shelter_profile_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shelter_profileImageButton"
                    android:layout_marginLeft="16dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="허위 정보 입력시 계정 영구정지가 될 수 있어요."
                    android:textColor="@color/subTitle2"></TextView>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/shelter_profile_sub">

                    <TextView
                        android:text="닉네임을 입력해주세요"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_marginLeft="16dp"
                        android:textSize="14dp"
                        android:textColor="@color/subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <EditText
                        android:id="@+id/shelter_nickname"
                        android:textSize="12dp"
                        android:paddingStart="16dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColorHint="@color/hintColor"
                        android:hint="2~16자 이내로 닉네임을 작성해주세요/"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/linear1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="보호소 이름"
                        android:textColor="@color/subTitle"
                        android:textSize="14dp"></TextView>
                    <EditText
                        android:id="@+id/shelter_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:hint="이름"
                        android:textColorHint="@color/hintColor"
                        android:textSize="12dp"></EditText>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/linear2"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="보호소 주소"
                        android:textColor="@color/subTitle"
                        android:textSize="14dp"></TextView>
                    <EditText
                        android:id="@+id/shelter_address"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:hint="주소를 입력해주세요"
                        android:textColorHint="@color/hintColor"
                        android:textSize="12dp"></EditText>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear3">

                    <TextView
                        android:text="보호소 연락처"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_marginLeft="16dp"
                        android:textSize="14dp"
                        android:textColor="@color/subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <EditText
                        android:id="@+id/shelter_phoneNumber"
                        android:textSize="12dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColorHint="@color/hintColor"
                        android:paddingStart="16dp"
                        android:hint="'-'를 제외한 숫자만 입력해주세요"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/linear4"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="담당자 이름"
                        android:textColor="@color/subTitle"
                        android:textSize="14dp"></TextView>

                    <EditText
                        android:id="@+id/shelter_managerName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:hint="이름"
                        android:paddingStart="16dp"
                        android:textColorHint="@color/hintColor"
                        android:textSize="12dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear5">

                    <TextView
                        android:text="담장자 연락처"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_marginLeft="16dp"
                        android:textSize="14dp"
                        android:textColor="@color/subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <EditText
                        android:id="@+id/shelter_managerPhoneNumber"
                        android:textSize="12dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColorHint="@color/hintColor"
                        android:hint="'-'를 제외한 숫자만 입력해주세요"
                        android:paddingStart="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear6">

                    <TextView
                        android:text="보호소 홈페이지"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_marginLeft="16dp"
                        android:textSize="14dp"
                        android:textColor="@color/subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <EditText
                        android:id="@+id/shelter_HomePage"
                        android:textSize="12dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColorHint="@color/hintColor"
                        android:paddingStart="16dp"
                        android:hint="링크를 첨부해주세요"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                    </EditText>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="다음"
            android:backgroundTint="@color/grey4"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.91"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.95"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>