<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:color">@color/Gray_06</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
    </style>


    <style name="bottomSeatCheckStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="buttonTint">@color/Main</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:button">@drawable/rb_check_pressed</item>
    </style>

    <style name="Widget_Donate_Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/Main</item>
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="customButtonRadius" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/White</item>
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:radius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/Gray_02</item>
    </style>


    <style name="Widget_post_title" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:color">@color/Gray_06</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextFontStyle_content" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:background">@null</item>
    </style>


    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="hintTextColor">@color/Gray_04</item>
        <item name="helperTextEnabled">true</item>

    </style>


    <style name="Widget_Feed_Introduce_OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="hintTextColor">@color/Gray_04</item>
        <item name="helperTextEnabled">true</item>
        <item name="android:paddingTop">15dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">1000</item>

    </style>

    <style name="SpinnerTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:textColor">@color/Gray_03</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ButtonSelecterStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ButtonSelecterThemeOverlay</item>
        <item name="strokeColor">@color/toggle_button_stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/text_button_pressed</item>
    </style>

    <style name="ButtonSelecterThemeOverlay">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorOnSurface">@color/Gray_07</item>
    </style>

    <style name="CustomTextViewTitle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/custom_font_family_medium</item>
        <item name="android:color">@color/Gray_03</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_black</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="rippleColor">@color/White</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_button_pressed</item>
        <item name="android:textColor">@color/chip_button_text_pressed</item>
        <item name="chipCornerRadius">35dp</item>
        <item name="textEndPadding">12dp</item>
        <item name="textStartPadding">12dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="Hyphon">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_bd</item>
    </style>

    <style name="tabTextSetting" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hansansneobold</item>
    </style>

    <style name="Widget_Feed_Fab_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">9dp</item>
    </style>


    <style name="Widget_Feed_CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bookmarker_selector</item>
        <item name="android:buttonTint">@drawable/color_main_gray_06</item>
    </style>

    <style name="Widget_Feed_Tab_Text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hansneo_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
    </style>
</resources>