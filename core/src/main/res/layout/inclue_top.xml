<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="일상글 작성"
        android:textColor="#323232"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_left"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top"
        app:layout_constraintStart_toEndOf="@+id/tv_top"
        app:layout_constraintTop_toTopOf="@+id/tv_top"
        app:srcCompat="@drawable/ic_chevron_down" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="다음"
        android:textColor="@color/color_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iv_more"
        app:layout_constraintTop_toTopOf="@+id/tv_top" />

    <ImageButton
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="131dp"
        android:background="@drawable/ic_keyboard_backspace"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top"
        app:layout_constraintEnd_toStartOf="@+id/tv_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_top" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>